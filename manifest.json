{
  "manifest_version": 2,
  "name": "sample",
  "version": "1.0",

  "applications": {
    "gecko": {
      "id": "sample@aaaa.org"
    }
  },

  "permissions": [
    "http://*/*",
    "https://*/*",
    "file:///*/*"
  ],  

  "background": {
    "scripts": ["js/dest/bundle.js"],
    "persistent": false
  },

  "browser_action": {
    "default_icon": "button/icon-16.png",
    "default_title": "Sample",
    "default_popup": "popup/choose_sample.html"
  }
}
